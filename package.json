{
  "name": "lit-element-state-decoupler",
  "version": "0.0.4",
  "description": "A lightweight utility for state handling outside of the component for litelements",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --coverage",
    "release:patch": "npm test && npm run build && npm version patch -m 'Creating new release %s' && git push --tags && gren release",
    "serve": "es-dev-server --node-resolve --watch --root-dir docs"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "es-dev-server": "^1.46.1",
    "jest": "^26.0.1",
    "ts-jest": "^26.0.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      "build"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "author": "Matthias Kainer",
  "license": "ISC"
}
